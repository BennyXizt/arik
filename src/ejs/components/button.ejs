<%
	if(typeof button_component === 'undefined' || !button_component) {
		return
	}

	var blockClass = 'button'
	if(typeof button_component.block !== 'undefined' && button_component.block) {
		blockClass = `${button_component.block}__button button`
	}

	var blockType = 'button'
	if(typeof button_component.link !== 'undefined' && button_component.link) {
		blockType = 'a'
	}

	if(typeof button_component.size !== 'undefined' && button_component.size) {
		switch(button_component.size) {
			case 'small': {
				blockClass += ' button--size-small'
				break;
			}
		}
	}

	if(typeof button_component.style !== 'undefined' && button_component.style) {
		switch(button_component.style) {
			case 'primary': {
				blockClass += ' button--style-primary'
				break;
			}
		}
	}

	if(typeof button_component.type !== 'undefined' && button_component.type) {
		switch(button_component.type) {
			case 'button-text': {
				blockClass += ' button--type-button-text'
				break;
			}
		}
	}
%>

<<%=blockType%> <%= blockType === 'a' ? `href=${button_component.link}` : ''%> class="<%=blockClass%>">
	<%=button_component.label%>
	<%- include('src/ejs/components/icon.ejs', {
		icon_component: button_component.icon_component
	})%>
</<%=blockType%>>