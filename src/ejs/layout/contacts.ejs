<%
	blockClass = 'contacts'
%>

<section class='layout__<%=blockClass%> <%=blockClass%>'>
	<div class='<%=blockClass%>__container container'>
		<%- include('externe/components/Image/Image.ejs', {
			image_component: {
				this: {
					class: `${blockClass}__picture`
				},
				img: {
					src: 'media/image/arik.png'
				}
			}
		}) %>
		<div class="<%=blockClass%>__body">
			<%- include('src/ejs/components/contactForm.ejs', {
				contactForm_component: {
					this: {
						class: `${blockClass}__form form-${blockClass}`,
						tag: 'form'
					},
					label: 'Contact',
					title: {
						tag: 'h2',
						label: 'Letâ€™s get in touch.'
					}
				}
			})%>
			<%- include('src/ejs/components/social.ejs', {
				social_component: {
					this: {
						parent: blockClass,
						type: 'ul'
					},
					type: 'button',
					label: true
				}
			})%>
		</div>
	</div>
</section>